<% render_main_sidebar_menu; render_content_header_breadcrumb %>

<div class="col-md-12">
  <div class="box">

    <div class="box-header with-border">
      <%= link_to_new %>
    </div>

    <div class="box-body">
      <table class="table table-striped">
        <tr>
          <%= tag.th Cdx::Site.human_attribute_name(:name) %>
          <%= tag.th Cdx::Site.human_attribute_name(:acronym) %>
          <%= tag.th Cdx::Site.human_attribute_name(:domain) %>
          <%= tag.th t('admin.actions.all') %>
        </tr>
        <% @collection.order(:name).each do |object| %>
            <tr>
              <%= tag.td object.name %>
              <%= tag.td object.acronym %>
              <%= tag.td object.domain %>
              <%= tag.td link_to_edit(object) %>
            </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
