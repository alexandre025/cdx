<% if defined?(f) %>
    <div class="box-body">
      <%= f.input :title %>
      <%# TODO : FriendlyId %>
      <%= f.input :slug, disabled: true if f.object.persisted? %>
      <%= f.input :content, as: :wysiwyg %>
    </div>
    <div class="box-footer">
      <%= link_to_cancel %>
      <%= f.button :submit %>
    </div>
<% end %>
