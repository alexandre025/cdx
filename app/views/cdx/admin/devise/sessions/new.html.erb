<p class="login-box-msg">
  Sign in to start your session
</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group has-feedback">
      <%= f.email_field :email, autofocus: true, class: %w(form-control), placeholder: 'Email' %>
      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.password_field :password, autocomplete: 'off', class: %w(form-control), placeholder: 'Password' %>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    <div class="row">
      <div class="col-xs-8">
        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>
      </div>
      <div class="col-xs-4">
        <%= f.submit 'Log in', class: %w(btn btn-primary btn-block btn-flat) %>
      </div>
    </div>
<% end %>

<%= render 'cdx/admin/devise/shared/links' %>
