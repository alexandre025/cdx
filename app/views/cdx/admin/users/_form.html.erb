<% if defined?(f) %>
    <div class="box-body">
      <%= f.input :email, as: :email %>
      <%= f.input :password, as: :password %>
      <%= f.input :password_confirm, as: :password %>
    </div>
    <div class="box-footer">
      <%= link_to t('admin.actions.cancel'), admin_users_path, class: 'btn btn-default' %>
      <%= f.button :submit %>
    </div>

<% end %>