<div class="main-header">
  <a href="<%= admin_root_path %>" class="logo">
    <span class="logo-mini">CDX</span>
    <span class="logo-lg"><b>Admin</b>CDX</span>
  </a>

  <nav class="navbar navbar-static-top">
    <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </a>

    <div class="navbar-custom-menu">
      <ul class="nav navbar-nav">
        <li class="dropdown user user-menu">
          <%= link_to '#', class: %w(dropdown-toggle), data: {toggle: :dropdown} do %>
              <%= image_tag current_admin_user.gravatar_url, class: %w(user-image) %>
              <%= tag.span current_admin_user.full_name %>
          <% end %>
          <ul class="dropdown-menu">
            <li>
              <%= link_to edit_admin_user_path(current_admin_user) do %>
                  <%= fa_icon :user %>
                  <%= t('admin.profile') %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_admin_user_session_path, data: { method: :delete } do %>
                  <%= fa_icon 'sign-out' %>
                  <%= t('admin.signout') %>
              <% end %>
            </li>
          </ul>
        </li>
      </ul>
    </div>
  </nav>
</div>